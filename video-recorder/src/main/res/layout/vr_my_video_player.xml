<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.lqwawa.libs.videorecorder.VideoView
        android:id="@+id/vr_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/vr_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="left|bottom"
        android:padding="10dp"
        android:gravity="center"
        android:src="@drawable/vr_back"
        android:background="@drawable/vr_btn_hl_bg"/>

    <ImageView
        android:id="@+id/vr_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="right|bottom"
        android:padding="10dp"
        android:gravity="center"
        android:src="@drawable/vr_confirm"
        android:background="@drawable/vr_btn_hl_bg"/>

</FrameLayout>