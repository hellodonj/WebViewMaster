<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacts_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp" >

        <ImageView
            android:id="@+id/contacts_item_icon"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/contacts_item_indicator"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="16dp"
            android:layout_gravity="top|right"
            android:background="@drawable/shape_round_indicator"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/contacts_item_title"
        style="@style/txt_wawa_normal_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="标题" />

</LinearLayout>

