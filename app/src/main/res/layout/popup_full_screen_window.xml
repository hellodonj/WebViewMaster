<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/popup_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_frame_bg"
            android:textSize="16sp"
            android:textColor="#ff584f"
            android:minHeight="@dimen/item_height"
            android:gravity="center"
            android:text="@string/cancel" >
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/popup_cancel"
            android:orientation="vertical" >

            <com.galaxyschool.app.wawaschool.views.MyListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/white_frame_bg"
                android:divider="@color/line_gray"
                android:dividerHeight="1dp"
                android:listSelector="@color/background"
                android:scrollbars="none" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>