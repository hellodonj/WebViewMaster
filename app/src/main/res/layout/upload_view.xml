<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/base_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:background="@drawable/updialog_gray_bg"
              android:paddingBottom="20dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            style="@style/txt_wawa_normal_black"
            android:textSize="@dimen/text_size_18"
            android:text="@string/title_hint"/>

        <com.lqwawa.apps.views.ContainsEmojiEditText
            android:id="@+id/title_edit"
            style="@style/txt_wawa_normal_black"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:maxLength="50"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separate_20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="@dimen/separate_20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            style="@style/txt_wawa_normal_black"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:text="@string/content_description"/>

        <com.lqwawa.apps.views.ContainsEmojiEditText
            android:id="@+id/content_edit"
            style="@style/txt_wawa_normal_black"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:maxLength="200"
            android:background="@android:drawable/editbox_background_normal"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|top"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/linear_divide_space"
        android:showDividers="middle"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/discard_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_green_bg"
            android:gravity="center"
            android:text="@string/discard_save"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/draft_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_green_bg"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/commit_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_green_bg"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="#ffffffff"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>