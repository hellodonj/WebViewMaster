<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_grid_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/item_book_cover"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_book_cover"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_course_flag"
            android:src="@drawable/icon_course_flag"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:src="@drawable/jsz_ico"
            />

        <ImageView
            android:id="@+id/item_open_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/not_open"
            android:visibility="gone"
            />
        <!--<TextView-->
            <!--android:id="@+id/item_description"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom|right"-->
            <!--android:text="建设中"-->
            <!--android:textColor="@color/white"-->
            <!--android:paddingLeft="4dp"-->
            <!--android:paddingRight="4dp"-->
            <!--android:paddingTop="2dp"-->
            <!--android:paddingBottom="2dp"-->
            <!--android:background="@drawable/red_5dp_red"-->
            <!--/>-->

    </FrameLayout>

    <ImageView
        android:id="@+id/item_shelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/book_shelf_m" />

    <TextView
        android:id="@+id/item_title"
        style="@style/txt_wawa_normal_black"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="0dp"
        android:gravity="center|top"
        android:maxLines="2"
        android:text="sfsfs" />

</LinearLayout>

