<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacts_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffebebeb"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/contacts_item_icon"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/contacts_item_description"
            style="@style/txt_wawa_normal_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:padding="0dp"
            android:background="#e0009039"
            android:gravity="center"
            android:textSize="8sp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:text="描述"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/contacts_item_title"
        style="@style/txt_wawa_normal_gray"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="标题" />

    <TextView
        android:id="@+id/contacts_item_status"
        style="@style/txt_wawa_normal_darkgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态" />

</LinearLayout>

