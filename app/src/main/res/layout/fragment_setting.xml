<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/main_bg_color">

    <com.galaxyschool.app.wawaschool.views.ToolbarTopView
        android:id="@+id/toolbartopview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<ScrollView
    android:layout_weight="1.0"
    android:layout_width="match_parent"
    android:layout_height="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.0"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/application_model_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="@dimen/userinfo_item_min_height"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/txt_wawa_normal_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/application_model"/>
            <TextView
                android:id="@+id/choose_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_model"
                android:textColor="#90000000"
                android:textSize="14sp"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/youjiantou"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_bg_color"/>

        <!-- 消息免打扰 -->
        <LinearLayout
            android:id="@+id/avoid_disturb_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_item_min_height"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/txt_wawa_normal_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/avoid_disturb"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_auto_upload_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="@dimen/userinfo_item_min_height"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                style="@style/txt_wawa_normal_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/auto_upload_resources"/>

            <com.galaxyschool.app.wawaschool.views.switchbutton.SwitchButton
                android:id="@+id/setting_switch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:kswTintColor="@color/text_green"/>

        </LinearLayout>

        <!-- 服务与帮助-->
        <LinearLayout
            android:id="@+id/layout_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_item_min_height"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/txt_wawa_normal_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/help"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <!-- 推荐两栖蛙蛙-->

        <LinearLayout
            android:id="@+id/layout_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_item_min_height"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/txt_wawa_normal_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/recommend_app"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <!-- 新版本检测-->
        <LinearLayout
            android:id="@+id/layout_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_item_min_height"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_check_update"
                    style="@style/txt_wawa_normal_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/str_check_update"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   >

                    <TextView
                        android:id="@+id/tv_check_code"
                        style="@style/txt_wawa_normal_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5.0.0"
                        />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_check_update"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_check_code"
                        android:src="@drawable/unread_count_bg"/>

                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youjiantou"
                   />
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="10dp"
              />
        </LinearLayout>

        <!-- 清理缓存 -->
        <LinearLayout
            android:id="@+id/layout_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_item_min_height"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/txt_wawa_normal_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/str_clean_cache"/>

                    <TextView
                        android:id="@+id/tv_cache_size"
                        style="@style/txt_wawa_normal_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5.88M"
                        />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youjiantou"
                    />
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>



        <!-- 关于我们-->
        <LinearLayout
            android:id="@+id/layout_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_item_min_height"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/txt_wawa_normal_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/about"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
    <TextView
        android:id="@+id/setting_logout_btn"
        style="@style/txt_wawa_normal_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_10dp_text_green"
        android:minWidth="120dp"
        android:minHeight="@dimen/userinfo_item_min_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="visible"
        android:text="@string/exit_account"/>

</LinearLayout>