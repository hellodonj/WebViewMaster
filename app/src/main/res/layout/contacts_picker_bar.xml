<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacts_picker_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffebebeb"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView style="@style/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffebebeb"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contacts_picker_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="@string/clear"
            android:textColor="@color/contacts_picker_bar_color"
            android:textSize="16sp" />

        <View style="@style/line_gray_v" />

        <TextView
            android:id="@+id/contacts_picker_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/contacts_picker_bar_color"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
