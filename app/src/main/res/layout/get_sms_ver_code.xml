<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/bg_middle_frame"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/verificantion_ico" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <EditText
        android:id="@+id/verification_code_edittext"
        style="@style/txt_wawa_big_black"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/verification_code"
        android:imeOptions="actionDone"
        android:maxLength="10"
        android:minHeight="@dimen/account_edittext_min_height"
        android:padding="9dp"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <RelativeLayout
        android:id="@+id/register_verification_code"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/get_ver_code_btn"
            style="@style/txt_wawa_big_green"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/button_green_gray_bg"
            android:gravity="center"
            android:minHeight="@dimen/register_btn_min_height"
            android:padding="5dp"
            android:text="@string/get_verification_code"
            android:textColor="@drawable/color_selector_green_gray" />
    </RelativeLayout>

</LinearLayout>