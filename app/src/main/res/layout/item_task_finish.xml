<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:background="#ffffffff">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center">

        <com.galaxyschool.app.wawaschool.views.RoundedImageView
            android:id="@+id/user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/default_user_icon"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/resource_indicator"
            android:layout_width="8dp"
            android:scaleType="fitCenter"
            android:layout_gravity="right|top|center"
            android:src="@drawable/shape_round_indicator_small"
            android:visibility="gone"
            android:layout_height="8dp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/user_name"
        style="@style/txt_wawa_normal_black"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="李潇"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/finish_time"
        style="@style/txt_wawa_normal_gray"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="2016-06-30 11:59:43"
        android:ellipsize="end"
        android:textSize="8sp"
        android:singleLine="true"
        android:maxLength="16"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        />

</LinearLayout>