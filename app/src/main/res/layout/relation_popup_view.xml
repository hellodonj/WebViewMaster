<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relation_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/relation_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_white_bg"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9E9E9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/relation_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/text_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/relation_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:padding="10dp"
                android:text="@string/confirm"
                android:textColor="@color/text_green"
                android:textSize="16sp" />
        </LinearLayout>

        <com.galaxyschool.app.wawaschool.views.wheelview.WheelView
            android:id="@+id/relation_wheelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


</RelativeLayout>

