<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:id="@+id/register_phonenumber_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_top_white_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/phone_lable_ico" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/phone_edittext"
                    style="@style/txt_wawa_big_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:digits="0123456789"
                    android:hint="@string/pls_input_phonenum"
                    android:inputType="phone"
                    android:minHeight="@dimen/account_edittext_min_height"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_confirm_password_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bg_middle_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/verificantion_ico" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/verification_code_edittext"
                    style="@style/txt_wawa_big_black"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/verification_code"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:minHeight="@dimen/account_edittext_min_height"
                    android:padding="9dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />

                <RelativeLayout
                    android:id="@+id/register_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/get_ver_code_btn"
                        style="@style/txt_wawa_big_green"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_green_gray_bg"
                        android:gravity="center"
                        android:minHeight="@dimen/register_btn_min_height"
                        android:padding="5dp"
                        android:text="@string/get_verification_code"
                        android:textColor="@drawable/color_selector_green_gray" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/login_email_ico"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/txt_wawa_small_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/mailbox_info" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_password_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bg_middle_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/login_password_ico" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/password_edittext"
                    style="@style/txt_wawa_big_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/account_edittext_min_height"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bg_middle_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/login_confirmpassword_ico" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/confirm_password_edittext"
                    style="@style/txt_wawa_big_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/account_edittext_min_height"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bg_bottom_frame"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/confirm_btn"
                    style="@style/txt_wawa_big_green"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/confirm_ico"
                    android:gravity="center"
                    android:minHeight="@dimen/register_btn_min_height"
                    android:padding="10dp"
                    android:text="@string/confirm" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/txt_wawa_big_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/meet_problem" />

            <TextView
                android:id="@+id/register_telephone_btn"
                style="@style/txt_wawa_big_darkgreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/contact_customer_service" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>