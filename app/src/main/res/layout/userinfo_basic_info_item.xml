<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/common_listview_item_h"
    android:gravity="center_vertical"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        style="@style/txt_wawa_big_black"
        android:id="@+id/basic_info_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/basic_info_flag_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:text="*" />

    <TextView
        android:id="@+id/basic_info_hint_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#949494"
        android:textSize="14sp"
        android:text="@string/use_for_getback_password"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/basic_info_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:textColor="#6d6d6d"
        android:gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:textSize="16sp" />

    <com.galaxyschool.app.wawaschool.views.CircleImageView
        android:id="@+id/basic_info_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_user_icon"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        android:visibility="visible"/>
</LinearLayout>