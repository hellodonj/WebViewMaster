<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_bg"
    android:orientation="vertical"
    android:gravity="clip_horizontal"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">

    <TextView
        android:id="@+id/dialog_title"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/course_qrcode"/>

    <ImageView
        style="@style/line_gray"/>


    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/qrcode_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>



    <TextView
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center_horizontal"/>


    <TextView
        android:id="@+id/other_dscp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="@string/ar_photo_desc"
        android:textColor="#a1a1a1"
        android:textSize="12sp"/>


    <ImageView style="@style/line_gray"/>


    <TextView
        android:id="@+id/save_btn"
        style="@style/contacts_dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="@string/save_to_photo"
        android:textSize="16sp"/>


</LinearLayout>