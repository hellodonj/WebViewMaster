<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_tab_class_management"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        android:id="@+id/class_manage_textview"
        android:text="@string/class_manage"/>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#009039"/>

    <TextView
        android:id="@+id/school_class_book_textview"
        android:layout_width="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16dp"
        android:text="@string/school_class_book"/>
</LinearLayout>