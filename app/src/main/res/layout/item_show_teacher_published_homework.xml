<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_assign_homework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="true"
                android:padding="10dp">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/media_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:src="@drawable/play_ico"/>

    </FrameLayout>

    <TextView
            android:id="@+id/tv_title"
            style="@style/comment_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frame_layout"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text=""
            android:maxLines="2"
            />

    <TextView
            android:id="@+id/tv_start_time"
            style="@style/comment_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frame_layout"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="15dp"
            android:text=""
            android:singleLine="true"/>
    <TextView
            android:id="@+id/tv_end_time"
            style="@style/comment_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/frame_layout"
            android:layout_below="@id/tv_start_time"
            android:layout_marginTop="5dp"
            android:text=""
            />

        <TextView
                android:id="@+id/tv_finish_status"
                style="@style/txt_wawa_small_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/frame_layout"
                android:layout_below="@id/tv_end_time"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

</RelativeLayout>