<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/contacts_header_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/header_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/sel_nav_backarrow"
            android:background="@drawable/nav_blank_ico"/>

        <!--未完成和已完成布局-->
        <LinearLayout
            android:id="@+id/layout_tab_select"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_left_tab"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:minWidth="90dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@drawable/course_picker_tab_button_l"
                android:enabled="false"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/according_to_teacher"
                android:textColor="@color/course_tab_txt_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/header_right_tab"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:minWidth="90dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:background="@drawable/course_picker_tab_button_r"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/according_to_class"
                android:textColor="@color/course_tab_txt_color"
                android:textSize="16sp"/>
        </LinearLayout>
        <!--标题布局-->
        <LinearLayout
            android:id="@+id/layout_header_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_title"
                style="@style/txt_wawa_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxLines="2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/header_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_blank_ico"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_green"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:visibility="visible"/>

    </LinearLayout>

    <ImageView style="@style/line_gray"/>

</LinearLayout>