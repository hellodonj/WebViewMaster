<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/home_root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_bg_color"
                android:orientation="vertical">

    <com.galaxyschool.app.wawaschool.views.MyViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_line"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/view_line"
        style="@style/line_gray"
        android:layout_above="@+id/home_bottom_bar"
        android:background="@color/line_gray"/>

    <com.galaxyschool.app.wawaschool.views.ToolbarBottomView
        android:id="@+id/home_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/iv_my_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:src="@drawable/icon_my_course_detail"/>
</RelativeLayout>

