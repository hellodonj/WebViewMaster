<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="90dp"
    >
<RelativeLayout
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    >

    <com.galaxyschool.app.wawaschool.views.CircleImageView
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:id="@+id/iv_img_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/margin_chat_activity"
       />



    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_img_left"
        android:layout_toLeftOf="@+id/iv_img_right"
        android:padding="8dp"
        android:id="@+id/ll_course"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_course_item"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:lines="1"
                android:ellipsize="end"
                tools:text="哈哈哈哈哈哈"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date"
                    android:lines="1"
                    android:ellipsize="end"
                    tools:text="哈哈哈哈哈哈"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark_gray"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/jiaxiao_detail_rightarrow_ico"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="12sp"
                    android:text="@string/str_mark_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:layout_alignLeft="@id/ll_course"
        android:layout_marginLeft="-10dp"
        android:id="@+id/iv_delete_left"
        android:visibility="gone"
        android:src="@drawable/icon_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:layout_alignRight="@id/ll_course"
        android:layout_marginRight="-10dp"
        android:id="@+id/iv_delete_right"
        android:visibility="gone"
        android:src="@drawable/icon_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"/>


    <com.galaxyschool.app.wawaschool.views.CircleImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:id="@+id/iv_img_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_chat_activity"
       />

</RelativeLayout>

</FrameLayout>