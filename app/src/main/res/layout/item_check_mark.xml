<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"

        >

        <com.galaxyschool.app.wawaschool.views.CircleImageView
            android:id="@+id/iv_img_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:visibility="invisible"
            />


        <LinearLayout
            android:id="@+id/ll_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_img_right"
            android:layout_toRightOf="@id/iv_img_left"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">


            <LinearLayout
                android:id="@+id/ll_course_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="14sp"
                        tools:text="哈哈哈发哈哈哈"/>

                    <TextView
                        android:id="@+id/tv_assistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:background="@drawable/bg_rectangle_gary_radius_10"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        tools:text="@string/str_assistance"/>
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="12sp"
                        tools:text="哈哈哈哈哈哈"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/jiaxiao_detail_rightarrow_ico"
                        android:drawablePadding="3dp"
                        android:text="@string/str_mark_watch"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="12sp"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_delete_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@id/ll_course"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/icon_delete"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_delete_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@id/ll_course"
            android:layout_marginRight="-10dp"
            android:src="@drawable/icon_delete"
            android:visibility="gone"/>


        <com.galaxyschool.app.wawaschool.views.CircleImageView
            android:id="@+id/iv_img_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:visibility="invisible"
            />

    </RelativeLayout>

</FrameLayout>