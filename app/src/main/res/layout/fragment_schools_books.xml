<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/contacts_header" />


    <com.galaxyschool.app.wawaschool.views.PullToRefreshView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contacts_pull_to_refresh_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/noc_works_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/noc_banner_logo"
                    />

                    <LinearLayout
                        android:id="@+id/school_more_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:background="#ebebeb"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/txt_wawa_big_black"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="@string/attended_schools"/>

                        <TextView
                            style="@style/txt_wawa_big_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/more"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/arrow_right"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <com.galaxyschool.app.wawaschool.views.MyGridView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/schools_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:numColumns="3"
                        android:stretchMode="columnWidth"
                        android:cacheColorHint="#00000000"
                        android:listSelector="#00000000"
                        android:scrollbars="vertical"
                        android:scrollbarStyle="insideOverlay"
                        android:horizontalSpacing="0dp"
                        android:verticalSpacing="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        />


                <LinearLayout
                    android:id="@+id/book_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:background="#ebebeb"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="@string/excellent_course"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/more"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/arrow_right"
                        android:visibility="visible"/>
                </LinearLayout>


                <com.galaxyschool.app.wawaschool.views.MyGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/books_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:cacheColorHint="#00000000"
                    android:listSelector="#00000000"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideOverlay"
                    android:horizontalSpacing="0dp"
                    android:verticalSpacing="0dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/pic_book_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:background="#ebebeb"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="@string/excellent_pic_book"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/more"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/arrow_right"
                        android:visibility="visible"/>
                </LinearLayout>



                <com.galaxyschool.app.wawaschool.views.MyGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pic_book_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:horizontalSpacing="0dp"
                    android:listSelector="#00000000"
                    android:numColumns="4"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="30dp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/show_book_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:background="#ebebeb"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="#009039"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="@string/hint_show_book"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textColor="#7a7a7a"
                        android:text="@string/more"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/jiaxiao_detail_rightarrow_pre_ico"
                        android:visibility="visible"/>
                </LinearLayout>


                <com.galaxyschool.app.wawaschool.views.MyGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/show_book_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:horizontalSpacing="0dp"
                    android:listSelector="#00000000"
                    android:numColumns="4"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="30dp"
                    />

                <LinearLayout
                    android:id="@+id/notice_book_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:background="#ebebeb"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="#009039"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="@string/broadcast_hall"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textColor="#7a7a7a"
                        android:text="@string/more"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/jiaxiao_detail_rightarrow_pre_ico"
                        android:visibility="visible"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd"/>

                <com.galaxyschool.app.wawaschool.views.MyGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/notice_book_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:horizontalSpacing="0dp"
                    android:listSelector="#00000000"
                    android:numColumns="4"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="30dp"
                    />



                <LinearLayout
                    android:id="@+id/campus_online_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:background="#ebebeb"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="#009039"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="@string/campus_now_direct"/>

                    <TextView
                        style="@style/txt_wawa_big_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textColor="#7a7a7a"
                        android:text="@string/more"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@drawable/jiaxiao_detail_rightarrow_pre_ico"
                        android:visibility="visible"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cdcdcd"/>

                <com.galaxyschool.app.wawaschool.views.MyGridView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/campus_online_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:horizontalSpacing="0dp"
                    android:listSelector="#00000000"
                    android:numColumns="4"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="30dp"
                    />


            </LinearLayout>
        </ScrollView>
    </com.galaxyschool.app.wawaschool.views.PullToRefreshView>

</LinearLayout>
