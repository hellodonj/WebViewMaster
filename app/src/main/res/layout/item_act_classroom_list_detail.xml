<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/resource_frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_grey_layout">

            <com.galaxyschool.app.wawaschool.views.RoundImageView
                android:id="@+id/media_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/act_classroom_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:background="@drawable/gradient_bottom_bg"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="2017-09-03"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <ImageView
                android:id="@+id/act_class_list_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:src="@drawable/rubbish_delete"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/act_class_list_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:src="@drawable/performance_ar_green"
                android:visibility="gone"/>

        </FrameLayout>

        <TextView
            android:id="@+id/act_class_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/resource_frameLayout"
            android:layout_alignRight="@+id/resource_frameLayout"
            android:layout_below="@+id/resource_frameLayout"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_normal"
            android:textSize="14sp"/>

        <!--来源-->
        <TextView
            android:id="@+id/tv_source_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/act_class_list_title"
            android:layout_alignRight="@+id/act_class_list_title"
            android:layout_below="@+id/act_class_list_title"
            android:ellipsize="end"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_normal"
            android:textSize="12sp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>