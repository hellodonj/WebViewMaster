<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacts_request_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/contacts_request_item_icon"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contacts_request_item_title"
            style="@style/txt_wawa_normal_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题" />

        <TextView
            android:id="@+id/contacts_request_item_description"
            style="@style/txt_wawa_normal_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="描述" />
    </LinearLayout>

    <Button
            android:id="@+id/contacts_request_item_button_agree"
            style="@style/txt_wawa_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="同意"
            android:textColor="#ffffffff"
            android:background="@color/request_agree_bg"
            android:visibility="visible"/>

    <Button
            android:id="@+id/contacts_request_item_button_reject"
            style="@style/txt_wawa_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="拒绝"
            android:textColor="#ffffffff"
            android:background="@color/request_reject_bg"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/contacts_request_item_status"
            style="@style/txt_wawa_normal_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|right"
            android:text="标题" />

</LinearLayout>

