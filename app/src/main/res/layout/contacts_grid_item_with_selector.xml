<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contacts_grid_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/contacts_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/contacts_item_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/teacher_header"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="8dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/contacts_item_selector"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left|top"
            android:src="@drawable/class_contacts_item_selector"
            android:scaleType="centerInside" />
    </FrameLayout>

    <TextView
        android:id="@+id/contacts_item_title"
        style="@style/txt_wawa_normal_black"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|top"
        android:maxLines="2"
        android:paddingBottom="0dp"
        android:text="标题" />

</LinearLayout>

