<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_round_image_shape"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/resource_frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.galaxyschool.app.wawaschool.views.HalfRoundedImageView
                android:id="@+id/resource_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_cover"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_auto_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bg_yellow_layout"
                android:padding="5dp"
                android:text="@string/voice_evaluating"
                android:textColor="@color/bg_white"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/resource_thumbnail_cover_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/book_not_download_cover"
                    android:visibility="visible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_not_download_label"
                    android:visibility="visible"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/item_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/contacts_item_selector"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/resource_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|left|center"
                android:background="@drawable/shape_round_indicator_small"
                android:scaleType="fitCenter"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/delete_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|top"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/delete_ico"
                android:visibility="gone"
                />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e8e8e8"/>

        <LinearLayout
            android:id="@+id/layout_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_star"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/resource_title"
                style="@style/txt_wawa_normal_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/min_padding"
                android:paddingRight="@dimen/min_padding"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:text="微笑的鱼"
                android:textSize="14sp"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

