<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:orientation="vertical">


        <com.galaxyschool.app.wawaschool.views.RoundedImageView
                android:id="@+id/icon_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_user_icon"/>

        <ImageView
                android:id="@+id/icon_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_gravity="right|top"
                android:src="@drawable/contacts_item_selector"
                android:visibility="gone"/>


    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_wawa_normal_black"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:text="李潇"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            />

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_wawa_normal_gray"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2016-06-30 11:59:43"
            android:ellipsize="end"
            android:textSize="8sp"
            android:singleLine="true"
            android:maxLength="16"
            android:layout_marginBottom="15dp"
            android:padding="5dp"/>
</LinearLayout>