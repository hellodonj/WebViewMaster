<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffebebeb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/toolbar_top_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/sel_nav_backarrow"
            android:background="@drawable/nav_blank_ico" />

        <TextView
            android:id="@+id/toolbar_top_title"
            style="@style/txt_wawa_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/qrcode_scanning"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/toolbar_top_commit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/nav_blank_ico"
            android:gravity="center"
            android:text=""
            android:layout_marginRight="6dp"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView style="@style/line_gray" />

</LinearLayout>

