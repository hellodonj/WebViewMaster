<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chapter_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/com_bg_light_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/com_item_space_l">

    <TextView
        android:id="@+id/tv_lesson_type_name"
        style="@style/text_gray_l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_hide_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/com_item_space"
        android:src="@drawable/arrow_up_gray_ico" />

</LinearLayout>

