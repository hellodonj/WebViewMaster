<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/com_item_space_s"
        android:visibility="gone">

        <!--<TextView-->
        <!--android:id="@+id/order_number_tv"-->
        <!--style="@style/text_gray_l"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="0px"-->
        <!--android:layout_height="wrap_content"-->
        <!--tools:text="两栖蛙蛙体验学校"-->
        <!--/>-->
        <TextView
            android:id="@+id/order_number_tv"
            style="@style/text_gray_l"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="两栖蛙蛙体验学校" />

        <TextView
            style="@style/text_gray_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_item_space"
            tools:text="@string/order_status_1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/com_bg_light_white"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/com_item_space_xxs">

        <RelativeLayout
            android:id="@+id/cover_lay"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginRight="@dimen/com_item_space"
            android:background="@color/windowsBackground">

            <ImageView
                android:id="@+id/course_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/angle_live_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/course_iv"
                android:layout_alignTop="@id/course_iv"
                android:src="@drawable/ic_angle_live"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/colorLight"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_buy_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_dark_gray_circle_shape"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textColor="@color/textLight"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:lines="2"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                tools:text="课程名" />

            <TextView
                android:id="@+id/organ_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/textAccent"
                android:textSize="14sp"
                tools:text="老师名" />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/textAccent"
                android:textSize="14sp"
                tools:text="老师名" />

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="vertical" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/course_price"
                    style="@style/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/com_text_red"
                    android:textSize="14sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/buyer_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_buyer"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/textSecond"
                    android:textSize="14sp"
                    tools:text="@string/app_name" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_line_gray"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/com_item_space_s">

        <TextView
            android:id="@+id/status_tv"
            style="@style/text_gray_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_item_space"
            tools:text="@string/order_status_1" />

        <TextView
            android:id="@+id/order_create_time_tv"
            style="@style/text_gray_l"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rebuy_tv"
            style="@style/text_gray_l"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/btn_green_stroke_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#009039"
            android:visibility="gone"
            tools:text="@string/cancel_order" />

        <TextView
            android:id="@+id/delete_order_tv"
            style="@style/text_green_l"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/com_item_space"
            android:background="@drawable/btn_green_stroke_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#009039"
            tools:text="@string/delete_order" />
    </LinearLayout>
</LinearLayout>