<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/filter_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_item_space"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/title"/>

            <TextView
                android:id="@+id/title_name"
                style="@style/text_black_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:text="@string/course"/>

            <TextView
                android:id="@+id/course_status_tv"
                style="@style/text_gray_l"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/com_item_space"
                android:layout_weight="1"
                android:background="@drawable/com_item_selector"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/arrow_down_gray_ico"
                android:gravity="right|center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/all"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_item_space_s"
            android:background="@color/com_bg_light_white"/>

        <include layout="@layout/com_refresh_list"/>
    </LinearLayout>

    <Button
        android:id="@+id/scanning_bt"
        style="@style/text_white_l"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/btn_green_bg"
        android:text="@string/scanning_task"/>
</FrameLayout>