                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/show_online_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
