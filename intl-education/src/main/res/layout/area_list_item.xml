<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/area_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/com_item_selector"
              android:gravity="center_vertical"
              android:padding="@dimen/com_item_space_xl"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/area_tv"
        style="@style/text_gray_xl"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/com_item_space_s"/>

    <ImageView
        android:id="@+id/right_arrow_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/com_item_space_xl"
        android:src="@drawable/ic_right_arrow"/>
</LinearLayout>