<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bg_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/top_bar_valid_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <include layout="@layout/com_page_load_failed"/>

    <LinearLayout
        android:id="@+id/result_title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exam_result_tv"
            style="@style/text_black_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/com_item_space"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/com_line_gray"
            android:paddingBottom="@dimen/com_item_space"
            android:paddingTop="@dimen/com_item_space"/>
    </LinearLayout>


    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_btn_height_xxxl"
        android:background="@color/com_bg_light_white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/view_answer_parsing_bt"
            style="@style/text_gray_xl"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/com_gray_item_selector"
            android:gravity="center"
            android:text="@string/view_answer_parsing"/>
    </LinearLayout>
    </LinearLayout>
    <com.lqwawa.intleducation.base.widgets.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
