<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classify_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/classify_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/classify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/textPrimary"
        android:textSize="12sp"/>

    <FrameLayout
        android:id="@+id/authorized_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_authorized_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/bg_authorized_selector"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/text_gray_blue_selector"
            android:background="@drawable/bg_solid_rectangle_gary_radius_12"/>

    </FrameLayout>
</LinearLayout>