<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/com_bg_light_white"
              android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/top_bar_valid_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/position_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/com_item_space_s"
        android:background="@drawable/com_item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_black_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/com_item_space_xl"
            android:text="@string/position_city"/>

        <TextView
            android:id="@+id/position_tv"
            style="@style/text_black_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/com_item_space_s"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/province_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/com_bg_light_white"
            android:dividerHeight="1dp"
            android:scrollbars="none"/>

        <ListView
            android:id="@+id/city_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/com_bg_light_white"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:visibility="invisible"/>

        <ListView
            android:id="@+id/area_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/com_bg_light_white"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:visibility="invisible"/>
    </FrameLayout>
    </LinearLayout>
    <com.lqwawa.intleducation.base.widgets.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
