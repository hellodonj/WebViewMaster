<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/com_item_selector"
    android:padding="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_live_avatar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="15:9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_online_state"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|right"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/colorLight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_live_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textLight"
            android:textSize="14sp"
            android:layout_gravity="bottom"
            android:background="@color/colorDarkAlpha"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:padding="3dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_live_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/textPrimary"
        android:textSize="12sp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/tv_live_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/textSecond"/>
</LinearLayout>