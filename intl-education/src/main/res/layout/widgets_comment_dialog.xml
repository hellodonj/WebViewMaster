<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/com_bg_white"
              android:orientation="vertical"
              android:gravity="center"
              android:padding="8dp">

    <LinearLayout
        android:id="@+id/grade_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tip_text"
            style="@style/text_gray"
            android:text="@string/click_to_score"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.lqwawa.intleducation.base.widgets.MyRatingBar
            android:id="@+id/score_rating_bar"
            style="@style/RatingStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"/>

    </LinearLayout>

    <com.lqwawa.apps.views.ContainsEmojiEditText
        android:id="@+id/comment_content_tv"
        style="@style/text_black_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="6dp"
        android:background="@drawable/com_gray_edge_bg"
        android:gravity="left|top"
        android:hint="@string/comment_hint_text"
        android:maxLength="200"
        android:lines="8"
        android:maxLines="8"
        android:textColorHint="@color/com_text_gray"/>

    <!--<Button
        android:id="@+id/submit_bt"
        style="@style/text_white_l"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_btn_height"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/com_green_bt_bg"
        android:text="@string/commit"/>-->

    <TextView
        android:id="@+id/submit_bt"
        style="@style/text_white_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="@color/textAccent"
        android:foreground="@drawable/ic_touch_menu"
        android:text="@string/send"/>

</LinearLayout>
