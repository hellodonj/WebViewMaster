<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/com_bg_light_white"
   >

    <com.lqwawa.intleducation.base.widgets.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/course_name"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        style="@style/text_black_xl"
        tools:text="小样 请付现金$10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            style="@style/text_red_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/need_pay"/>

        <TextView
            android:textSize="20sp"
            tools:text="$100"
            android:id="@+id/need_pay_tv"
            style="@style/text_red_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



        <Switch
            android:visibility="gone"
            android:id="@+id/psw_visibility_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />


    <com.lqwawa.intleducation.lqpay.widget.GridPasswordView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:gpvPasswordLength = "6"
        app:gpvPasswordType="numberPassword" />

    <TextView
        android:layout_marginLeft="20dp"
        android:text="@string/pay_tips"
        style="@style/text_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
