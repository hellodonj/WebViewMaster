<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lesson_root_lay"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/com_bg_white"
              android:orientation="vertical">

    <View
        android:id="@+id/chapter_spl_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/com_bg_light_white"/>

    <LinearLayout
        android:id="@+id/res_root_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_item_selector"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lesson_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp">

                <View
                    android:layout_marginLeft="4dp"
                    android:id="@+id/lesson_flag_view"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/com_cicle_green_bg"/>

                <TextView
                    android:id="@+id/tv_lesson_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textColor="@color/textLight"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    style="@style/TextAppearance.AppCompat.Body1"/>


            </FrameLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/lesson_name_tv"
                    style="@style/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/lesson_audition_tv"
                    style="@style/text_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/audition"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/lock_test_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/com_item_space"
                android:src="@drawable/lock"
                android:visibility="gone" />

            <!--<CheckBox-->
                <!--android:id="@+id/lock_test_cb"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/com_checkbox_lock"-->
                <!--android:button="@null"-->
                <!--android:clickable="false"-->
                <!--android:paddingRight="10dp"-->
                <!--android:visibility="gone" />-->


            <ImageView
                android:scaleType="center"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/com_item_space"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>