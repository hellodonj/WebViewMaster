<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ebebeb"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/header_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/nav_blank_ico"
            android:scaleType="centerInside"
            android:src="@drawable/sel_nav_backarrow"/>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="@string/my_coins"
            android:textColor="@color/black"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/header_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:background="@drawable/nav_blank_ico"
            android:gravity="center"
            android:text="@string/coin_detail"
            android:textColor="@color/text_green"
            android:textSize="16sp"/>


    </RelativeLayout>

    <View
        android:id="@+id/bottom_split_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/com_gray_trans_gradient"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="3dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/textPrimary"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/textSecond" />

    <com.lqwawa.intleducation.base.widgets.ControlViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/user_balance" />


        <TextView
            android:id="@+id/balance_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/com_text_black"
            android:textSize="@dimen/com_font_size_12" />

        <TextView
            style="@style/text_gray_xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wawa_coin" />


        <TextView
            android:id="@+id/charge_textView"
            style="@style/text_white_xl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_charge_bg"
            android:gravity="center"
            android:padding="14dp"
            android:text="@string/charge_coin" />

        <TextView
            android:id="@+id/tv_give_money"
            style="@style/text_white_xl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_charge_bg"
            android:gravity="center"
            android:padding="14dp"
            android:text="@string/label_give_money" />

    </LinearLayout>

</LinearLayout>