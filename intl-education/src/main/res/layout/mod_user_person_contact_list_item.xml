<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- 首字母 -->
    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/com_item_space_xxs"
        android:paddingBottom="@dimen/com_item_space_xxs"
        android:paddingLeft="@dimen/com_item_space_l"
        android:background="@color/com_bg_light_white"
        style="@style/text_black_l"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_item_selector"
        android:paddingLeft="6dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_head_iv"
                android:src="@drawable/ic_new_friend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/com_item_space_xs"/>

            <TextView
                android:id="@+id/new_msg_count_tv"
                style="@style/text_white_xs"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:layout_gravity="right|top"
                android:background="@drawable/com_cicle_red_bg"
                android:text="1"/>
        </FrameLayout>

        <TextView
            style="@style/text_dark_gray_xl"
            android:id="@+id/name_tv"
            android:layout_width="0px"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="4dp"
            android:layout_marginRight="@dimen/com_item_space_xxl"
            android:layout_weight="1"/>

        <TextView
            style="@style/text_gray"
            android:id="@+id/user_type_tv"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/com_item_space_xxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>