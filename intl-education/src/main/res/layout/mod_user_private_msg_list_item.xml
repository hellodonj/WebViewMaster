<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/com_item_selector"
              android:clickable="false"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="6dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_head_iv"
            android:src="@drawable/ic_new_friend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/com_item_space_xs"/>

        <TextView
            android:id="@+id/new_msg_count_tv"
            style="@style/text_white_xs"
            android:visibility="gone"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:layout_gravity="right|top"
            android:background="@drawable/com_cicle_red_bg"
            android:text="1"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_tv"
                style="@style/text_dark_gray_xl"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="4dp"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/com_item_space"
                style="@style/text_gray"/>
        </LinearLayout>

        <TextView
            android:id="@+id/msg_tv"
            style="@style/text_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"/>
    </LinearLayout>
</LinearLayout>
