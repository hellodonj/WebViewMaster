<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lqwawa.intleducation.base.widgets.TopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/include_organ_course_filtrate_tabs" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorHeight="3dp"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/textPrimary"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/textSecond" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--作业库功能-->
            <FrameLayout
                android:id="@+id/new_cart_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="40dp"
                android:background="@drawable/ic_work_cart_shadow"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_work_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/label_work_cart"
                    android:textColor="@color/textLight"
                    android:textSize="14sp"
                    android:paddingRight="6dp"/>

                <TextView
                    android:id="@+id/tv_cart_point"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_red_circle_point"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/textLight"
                    android:textSize="12sp" />

            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            android:weightSum="2">

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/btn_add_subject"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/btn_accent_radius_19"
                android:gravity="center"
                android:text="@string/title_subject_setting"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textColor="@color/textLight"
                android:textSize="16sp"
                app:gTouchColor="@color/touch_color"
                app:gTouchCornerRadius="19dp"
                app:gTouchEffect="ripple" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="2">

                <net.qiujuer.genius.ui.widget.Button
                    android:id="@+id/btn_request_authorized"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_accent_radius_19"
                    android:gravity="center"
                    android:text="@string/label_request_authorization"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    app:gTouchColor="@color/touch_color"
                    app:gTouchCornerRadius="19dp"
                    app:gTouchEffect="ripple" />

                <net.qiujuer.genius.ui.widget.Button
                    android:id="@+id/btn_more_course"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_accent_radius_19"
                    android:gravity="center"
                    android:text="@string/label_more_course_line"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    app:gTouchColor="@color/touch_color"
                    app:gTouchCornerRadius="19dp"
                    app:gTouchEffect="ripple" />


            </LinearLayout>

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_action_selector"
                android:gravity="center"
                android:text="@string/label_confirm_add"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textColor="@color/textLight"
                android:textSize="16sp"
                android:visibility="gone"
                app:gTouchColor="@color/touch_color"
                app:gTouchCornerRadius="19dp"
                app:gTouchEffect="ripple" />


        </FrameLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/tv_more_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/com_bg_circle_green_btn"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="@string/label_more_course"
        android:textColor="@color/textLight"
        android:textSize="14sp" />

</FrameLayout>