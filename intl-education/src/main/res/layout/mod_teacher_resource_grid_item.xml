<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/resource_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/com_bg_light_white"
              android:padding="1dip"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/com_white_bg_selecter"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/resource_cover_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/resource_name_tv"
                style="@style/text_gray_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>