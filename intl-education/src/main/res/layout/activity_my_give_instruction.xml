<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarSize"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorLight">

            <CheckedTextView
                android:id="@+id/tv_give_course"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:checked="true"
                android:textSize="14sp"
                android:gravity="center"
                android:text="@string/label_tab_new_give_study_course"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/tab_header_text_selector"
                android:background="@drawable/bg_tab_header_left_selector"/>

            <CheckedTextView
                android:id="@+id/tv_give_online_study"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="@string/label_tab_new_give_teach_course"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/tab_header_text_selector"
                android:background="@drawable/bg_tab_header_right_selector"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:padding="4dp"
            android:src="@drawable/ic_back_green"/>



    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontalDividerHeight"
        android:background="@color/divider_color"/>

    <com.lqwawa.intleducation.base.widgets.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.lqwawa.intleducation.base.widgets.NoScrollViewPager>

</LinearLayout>