<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="6dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/com_item_selector">

    <ImageView
        android:id="@+id/iv_course_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,10:7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_question_wrong"
        android:padding="4dp"
        android:foreground="@drawable/ic_touch_menu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_buy_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/textLight"
        android:ellipsize="end"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/iv_course_icon"
        app:layout_constraintRight_toRightOf="@+id/iv_course_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_course_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_course_icon"
        android:background="@drawable/bg_dark_gray_circle_shape"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"/>

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_course_icon"
        android:textColor="@color/textPrimary"
        android:textSize="12sp"
        android:layout_gravity="left"
        tools:text="@string/app_name"
        android:lines="2"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        />


</android.support.constraint.ConstraintLayout>