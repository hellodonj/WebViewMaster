<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="1dp"
              android:paddingRight="1dp"
              android:background="@drawable/btn_white_bg">

    <RelativeLayout
        android:id="@+id/contacts_dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contacts_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/label_course_qrcode"
            style="@style/contacts_dialog_text"
            android:singleLine="true"/>

        <ImageView
            android:layout_below="@id/contacts_dialog_title"
            style="@style/line_gray"/>

        <ImageView
            android:id="@+id/contacts_dialog_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/close_ico"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ff009039"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:text="@string/label_course_qrcode"
            android:gravity="center"
            android:visibility="gone"/>

    <LinearLayout
            android:id="@+id/qrcode_grp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#ffffff"
        >

        <ImageView
                android:id="@+id/qrcode_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"/>

        <TextView
                android:id="@+id/course_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/other_dscp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="visible"/>

    </LinearLayout>


    <TextView
        android:id="@+id/qr_photo_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:text="@string/label_qr_photo_desc"
        android:textColor="#a1a1a1"
        android:textSize="12sp"/>


    <ImageView style="@style/line_gray"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

        <TextView
            android:id="@+id/share_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_green_selector"
            android:minHeight="40dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/label_share"
            android:textColor="#ffffffff"
            android:visibility="gone"/>

        <TextView
                android:id="@+id/save_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                style="@style/contacts_dialog_text"
                android:background="#00000000"
                android:minHeight="40dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/label_image_save_to_photo"
                />


            <TextView
                    android:id="@+id/cancel_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_green_selector"
                    android:minHeight="40dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="#ffffffff"
                    android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>