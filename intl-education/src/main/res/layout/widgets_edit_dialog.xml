<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/com_bg_white"
              android:gravity="center"
              android:orientation="vertical"
              android:id="@+id/edit_root"
              android:padding="8dp">

    <TextView
        android:id="@+id/title_tv"
        style="@style/text_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_line_gray"/>

    <com.lqwawa.apps.views.ContainsEmojiEditText
        android:id="@+id/content_et"
        style="@style/text_black_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/translation"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:padding="6dp"
        android:textColorHint="@color/com_text_gray"/>
</LinearLayout>
