<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_selector"
    android:padding="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp" >

    <!--android:background="@color/colorLight"
    android:foreground="?android:attr/selectableItemBackground"-->

    <!--android:background="@color/colorLight"-->
    <!--android:foreground="@drawable/ic_touch_fg_gray"-->

    <android.support.constraint.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"/>

    <ImageView
        android:id="@+id/iv_class_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vertical_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="110:65"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_give_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/textLight"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/iv_class_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        xmlns:tools="http://schemas.android.com/tools"
        tools:text="@string/app_name"
        tools:textColor="@color/textPrimary"/>

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/textLight"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:background="@color/colorDarkAlpha"
        app:layout_constraintLeft_toLeftOf="@+id/iv_class_icon"
        app:layout_constraintRight_toRightOf="@+id/iv_class_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_class_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintLeft_toRightOf="@+id/vertical_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_class_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_class_icon">

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textPrimary"
            android:gravity="left|top"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/tv_teachers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/textSecond"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/textSecond"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:gravity="left|bottom">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textMoneyRed"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textSecond"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        </LinearLayout>

        <!--<TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/textSecond"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_class_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_class_icon"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/textMoneyRed"
            android:gravity="right"
            android:layout_marginTop="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_class_icon"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>-->

    </LinearLayout>

</android.support.constraint.ConstraintLayout>