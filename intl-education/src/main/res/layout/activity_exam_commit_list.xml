<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/com_bg_light_white"
             android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_bar_valid_height"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/test_content_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/test_icon_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_exam_not_flag"/>
            <TextView
                style="@style/text_black_xl"
                android:id="@+id/test_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/com_item_space"/>
            <TextView
                style="@style/text_gray_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_right_arrow"
                android:layout_gravity="bottom|right"
                android:text="@string/watch_test"
                android:layout_marginLeft="@dimen/com_item_space" />
        </LinearLayout>
        <include layout="@layout/com_refresh_list"/>
    </LinearLayout>
    <com.lqwawa.intleducation.base.widgets.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
