<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/com_bg_light_white"
              android:fitsSystemWindows="false"
              android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/top_bar_valid_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/edit_avatar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/com_item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/com_item_space_xxl">

                <ImageView
                    android:id="@+id/avatar_iv"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_header_def"/>

                <TextView
                    android:id="@+id/edit_avatar_tv"
                    style="@style/text_dark_gray_l"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="@dimen/com_item_space_s"
                    android:text="@string/edit_avatar"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nickname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_item_space_s"
                android:background="@drawable/com_item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/com_item_space_xl"
                android:visibility="gone">

                <TextView
                    style="@style/text_gray_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nick_name"/>

                <TextView
                    android:id="@+id/nickname_tv"
                    style="@style/text_gray_l"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_item_space"
                    android:layout_marginRight="@dimen/com_item_space"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_item_space_xxxs"
                android:background="@drawable/com_item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/com_item_space_xl">

                <TextView
                    style="@style/text_gray_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"/>

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/text_gray_l"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_item_space"
                    android:layout_marginRight="@dimen/com_item_space"
                    android:layout_weight="1"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gender_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_item_space_s"
                android:background="@drawable/com_item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/com_item_space_xl">

                <TextView
                    style="@style/text_gray_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"/>

                <TextView
                    android:id="@+id/gender_tv"
                    style="@style/text_gray_l"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_item_space"
                    android:layout_marginRight="@dimen/com_item_space"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_item_space_xxxs"
                android:background="@drawable/com_item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/com_item_space_xl">

                <TextView
                    style="@style/text_gray_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"/>

                <TextView
                    android:id="@+id/city_tv"
                    style="@style/text_gray_l"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_item_space"
                    android:layout_marginRight="@dimen/com_item_space"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/introduction_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_item_space_xxxs"
                android:background="@drawable/com_item_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/com_item_space_xl">

                <TextView
                    style="@style/text_gray_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/introduction"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/introduction_tv"
                        style="@style/text_gray_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/com_item_space"
                        android:paddingRight="@dimen/com_item_space"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <com.lqwawa.intleducation.base.widgets.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
