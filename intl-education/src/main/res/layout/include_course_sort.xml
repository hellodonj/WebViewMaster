<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/hot_layout"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/com_item_space">

                <TextView
                    android:id="@+id/hot_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hottest"
                    android:textColor="@color/organ_tab_text"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/hot_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/arrow_down_gray_ico"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/com_item_space"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/com_item_space"
                android:background="#cdcdcd"/>

            <LinearLayout
                android:id="@+id/status_layout"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/com_item_space">

                <TextView
                    android:id="@+id/status_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_status_all"
                    android:textColor="@color/organ_tab_text"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/status_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/arrow_down_gray_ico"/>
            </LinearLayout>

            <View
                android:id="@+id/filter_splitter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/com_item_space"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/com_item_space"
                android:background="#cdcdcd"/>

            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/com_item_space">

                <TextView
                    android:id="@+id/filter_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textColor="@color/organ_tab_text"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/filter_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/arrow_down_gray_ico"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#cdcdcd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/hot_sel_iv"
                android:visibility="invisible"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_up_small"/>

            <ImageView
                android:id="@+id/status_sel_iv"
                android:visibility="invisible"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_up_small"/>


            <ImageView
                android:id="@+id/filter_sel_iv"
                android:visibility="invisible"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_up_small"/>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>

