<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/com_bg_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:id="@+id/top_bar_root"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/com_bg_black">

        <RelativeLayout
            android:id="@+id/search_bg_view"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/trans_search_text_bg">

            <TextView
                android:id="@+id/search_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:background="@android:color/transparent"
                android:inputType="none"
                android:hint="@string/search_hit"
                android:maxLines="1"
                android:padding="2dp"
                style="@style/text_white_l"
                android:textColorHint="@color/com_text_light_gray"
                android:textCursorDrawable="@null"/>


            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/search_small"/>

        </RelativeLayout>



        <ImageView
            android:id="@+id/user_head_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="9dp"
            android:src="@drawable/user"/>
    </LinearLayout>

    <com.lqwawa.intleducation.base.widgets.PullRefreshView.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/com_bg_light_white"
                android:orientation="vertical">

                <com.lqwawa.intleducation.base.widgets.BannerHeaderView
                    android:id="@+id/banner_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.lqwawa.intleducation.base.widgets.PullRefreshView.NoScrollGridView
                    android:id="@+id/classify_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:numColumns="3"
                    android:padding="@dimen/com_item_space"
                    android:stretchMode="columnWidth"/>
            </LinearLayout>
        </ScrollView>
    </com.lqwawa.intleducation.base.widgets.PullRefreshView.PullToRefreshView>
</LinearLayout>