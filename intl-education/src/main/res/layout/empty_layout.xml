<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.lqwawa.intleducation.base.CourseEmptyView
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:empty_text_remind_visible="true"
        app:empty_text_remind="@string/label_empty_content"
        app:empty_text_loading="@string/label_course_empty_info_2"
        app:empty_icon_drawable="@drawable/ic_course_empty"
        app:call_show="true">

        <!--app:empty_text_remind="@string/label_course_empty_info_1"-->

    </com.lqwawa.intleducation.base.CourseEmptyView>

    <com.lqwawa.intleducation.base.NetErrorView
        android:id="@+id/net_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:net_error_icon="@drawable/ic_net_error"
        app:net_error_text="@string/label_net_error">

    </com.lqwawa.intleducation.base.NetErrorView>

    <com.lqwawa.intleducation.base.LoadingView
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loading_loading_text="@string/prompt_loading">

    </com.lqwawa.intleducation.base.LoadingView>


</FrameLayout>