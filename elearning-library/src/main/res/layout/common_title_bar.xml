<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffebebeb"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/back_base_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/nav_blank_ico"
            android:scaleType="centerInside"
            android:src="@drawable/sel_nav_backarrow" />

        <TextView
            android:id="@+id/back_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="#ff373636"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="3dp"
            android:textColor="#009039"
            android:textSize="16sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView style="@style/line_gray" />

</LinearLayout>